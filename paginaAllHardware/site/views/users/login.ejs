<%- include("../partials/head") %>

<%- include("../partials/header") %>

<link rel="stylesheet" href="/css/login.css">

<div class="contenedor">

  <div class="titulo">

    <h4>Ingresar</h4>

  </div>

  <form class="login" method="POST" action="/users/login">

    <input class="input" type="email" name="email" value placeholder="Tu email" id="email" required />
    <% if (typeof errors != 'undefined') { %>
      <div class="errors"><%= errors.email ? errors.email.msg : '' %> </div>
    <% } %> 

    <input class="input" type="password" name="password" value placeholder="Tu Contraseña" id="password" required />
    <% if (typeof errors != 'undefined') { %>
      <div class="errors"><%= errors.password ? errors.password.msg : '' %> </div>
    <% } %> 
    <div style="display: flex;">
    <input type="checkbox" class="recordar" name="recordame"> 
    <label for="recordame">No cerrar sesion</label>
    </div>

    <div> <a class="recuperar-contraseña" href="#"> Restaurar contraseña</a></div>

    <button class="btn" type="submit" name="btn"> Ingresar</button>

    <div class="regis">¿Aún no tenés cuenta? <a class="" href="/users/registro"> Registrate </a> </div>

  </form>

</div>

<%- include("../partials/footer") %>

