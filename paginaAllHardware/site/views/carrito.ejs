                    <div><i class="fas fa-minus"></i></div>
    
                    <div>
                        <p><%= cart.cantidad %> </p>
                    </div>
    
                    <div><i class="fas fa-plus"></i></div>
    
                </div>
    
                <div>
    
                    <p class="eliminar">Eliminar</p>
    
                </div>
    
                <div>
    
                    <p class="precio">$<%= product[1].price %></p>
    
                </div>
    
            </div>
    
        </div> 

    <% } %> 

