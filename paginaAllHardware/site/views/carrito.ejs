<main class="container">

    <h2 id="titulo">Resumen de tu pedido <%= user.name %> </h2>

    <% for ( let i = 0; i <= cart.length; i++ ) { %>

        <div class="producto">

            <div class="img">
    
                <img id="img"
                    src="<%= product[1].img %>" alt="">
            </div>
    
            <div>
    
                <div class="contenedor-title">
    
                    <h4 class="title"><%= product[1].name %> </h4>
    
                </div>
    
