<link rel="stylesheet" href="/css/carrito.css">

<main class="container">

    <h2 id="titulo">Resumen de tu pedido <%= user.name %> </h2>

    <% let total = 0 %> 

    <% if (cart.length == 0) { %>
        <br>
        <h4 style="text-align: center;">Tu carrito esta vacio</h4>
    <% } %> 

    <% for ( let i = 0; i < cart.length; i++) { %> 

        <% for ( let j = 0; j < product.length; j++ ) { %> 

            <% if ( cart[i].id_products == product[j].id ) { %> 

                <div class="producto">

                    <div class="img">
            
                        <img id="img"
                            src="<%= product[j].img %> " alt="">
                    </div>
            
                    <div>
            
                        <div class="contenedor-title">
            
                            <h4 class="title"><%= product[j].name %> </h4>
            
                        </div>
            
                        <div class="cantidad">
            
                            <div><i class="fas fa-minus"></i></div>
            
                            <div>
                                <p><%= cart[i].cantidad %> </p>
                            </div>
            
                            <div><i class="fas fa-plus"></i></div>
            
                        </div>
            
                        <div>
            
                            <p class="eliminar">Eliminar</p>
            
                        </div>
            
                        <div>
            
                            <p class="precio">$<%= product[j].price %> </p>
                            <% total += product[j].price %> 
            
                        </div>
            
                    </div>
            
                </div>

            <% } %> 

        <% } %>  

    <% } %>  

