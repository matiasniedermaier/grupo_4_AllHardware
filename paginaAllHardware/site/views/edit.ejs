<%- include("partials/head") %>

<%- include("partials/header") %>

<link rel="stylesheet" href="/css/detalle.css">

<div class="container section">

    <section>

        <a href="/">Home</a>

        <i class="fas fa-angle-right" style="padding-right: 5px;"></i>

        <a href="/productos">Productos</a>

        <i class="fas fa-angle-right" style="padding-right: 5px;"></i>

        <%= Product.name %>

    </section>

</div>

<form method="POST" action="/productos/<%= Product.id%>?_method=PUT" enctype="multipart/form-data">

    <div id="main" class="container contenedor" style="background-color: #fff;">

        <div class="div-izquierda">

            <div class="cont-img">

                <img class="img" src="<%= Product.img %>" alt="">

            </div>

            <div>

                <input type="file" id="img" name="img">
                <% if (typeof errors != 'undefined') { %>
                    <div class="errors"><%= errors.img ? errors.img.msg : '' %> </div>
                <% } %>
                <label>Selecciona una imagen</label>

            </div>

        </div>

        <section>

            <article class="titulo"><%= Product.name %></article>

            <div class="form-name">

                <input class="form" type="text" id="name" placeholder="Nombre" name="name" value="<%= Product.name %>">
                <% if (typeof errors != 'undefined') { %>
                    <div class="errors"><%= errors.name ? errors.name.msg : '' %> </div>
                <% } %> 

            </div>

            <div class="form-name">
                <label class="" for="brand">Marca</label>
                <select class="form" name="brand" >
                  <option value="">--Seleccione--</option>
                  <% for(let brand of Brand ) { %>
                    <option value="<%= brand.id %>" 
                      <% if (Product.id_brand == brand.id) {%> selected <% } %>><%= brand.name %></option>
                  <% } %>
                </select>
              </div>

              <div class="form-name">
                <label class="" for="category">Categoria</label>
                <select class="form" name="category" >
                  <option value="">--Seleccione--</option>
                  <% for(let category of Category ) { %>
                    <option value="<%= category.id %>" 
                      <% if (Product.id_category == category.id) {%> selected <% } %>><%= category.name %></option>
                  <% } %>
                </select>
              </div>




            <ul type="none" class="subtitulo">

                <li class="costo">$<%= Product.price %></li>

                <li>
                    <label for="">Precio</label>
                    <input class="form-price form" type="number" id="price" placeholder="Precio" name="price" value="<%= Product.price %>">
                </li>

                <li>
                    <label for="">Stock</label>
                    <input class="form-price form" type="number" id="stock" placeholder="Stock" name="stock" value="<%= Product.stock %>">
                </li>

                <li><mark> Envio con normalidad</mark></li>

                <li id="nuevo">Nuevo</li>

                <li class="envio"><i class="far fa-credit-card" style="padding-right: 5px;"></i>Paga hasta 12 cuotas</li>

                <li>

                    <img src="/images/imagenesMediosDePago/visa.png" alt="">
                    <img src="/images/imagenesMediosDePago/amex.png" alt="">
                    <img src="/images/imagenesMediosDePago/master.png" alt="">
                    <img src="/images/imagenesMediosDePago/efectivo.png" alt="">

                </li>

                <li class="envio"> Envío gratis a todo el país</li>

                <li><i class="fas fa-truck"></i></li>

                <li id="buton">

                    <button class="butontwo">Agregar al carrito</button>

                </li>

            </ul>

        </section>

        <div>

            <h3 class="tituloDes">Detalles del producto</h3>

            <p><%= Product.especification%></p>

            <div style="display: flex;">

                <textarea class="form-especification form" type="text" id="especification" placeholder="Especificación" name="especification"><%= Product.especification %></textarea>
                <% if (typeof errors != 'undefined') { %>
                    <div class="errors"><%= errors.especification ? errors.especification.msg : '' %> </div>
                <% } %> 

            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>

        </div>

    </div>

</form>

