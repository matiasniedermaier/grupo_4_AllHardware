<%- include("../partials/head") %>

<%- include("../partials/header") %>

<link rel="stylesheet" href="/css/profile.css">

<div class="container-fluid">

    <h1 class="title-profile">Perfil de <%= user.name %></h1>

    <div class="portada">

        <div class="img-profile">

            <img id="img-profile" src="<%= user.img %> " alt="">

        </div>

        <div class="logo-profile">
    
            <img src="/images/logo.webp" alt="">
    
        </div>

    </div>

    <div class="datos-usuario">

        <form action="/users/profile" method="POST" enctype="multipart/form-data">
        
            <label class="datos-usuario-edit" for="nombre">Nombre</label><br>
            <input class="input" type="text" name="name" id="nombre" value="<%= user.name %>">
            <% if (typeof errors != 'undefined') { %>   
                <div class="errors"><%= errors.name ? errors.name.msg : '' %> </div>
            <% } %> 
            
            <label class="datos-usuario-edit" for="email">Email</label><br>
            <input class="input" type="text" name="email" id="email" value="<%= user.email %>">
            <% if (typeof errors != 'undefined') { %>
                <div class="errors"><%= errors.email ? errors.email.msg : '' %> </div>
            <% } %>

            <label class="datos-usuario-edit">Imagen</label><br>
            <img style="width: 100px; margin-left: 50px;" src="<%= user.img %>" alt=""><br><br>
            <input class="input" type="file" id="img" name="img">
            <% if (typeof errors != 'undefined') { %>
                <div class="errors"><%= errors.img ? errors.img.msg : '' %> </div>
            <% } %>

            <br><br>

            <button style="margin-left: 50px;" type="submit" class="btn btn-primary">Guardar</button>
        
        </form>

    </div>

</div>

<%- include("../partials/footer") %>